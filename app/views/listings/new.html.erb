<div class="container">
  <div class="col-md-8 offset-md-2">
    <div class="card mt-5">
      <div class="card-header"><h2>New Listing</h2></div>
      <div class="card-body">
        <%= form_for @listing do |f| %>
          <%= render  "#{@listing.current_step}_step", :f => f %><br>
          <%=f.submit "continue" %><br>
          <%=f.submit "Back", :name => "back_button" unless @listing.first_step? %><br>
        <% end %>  
        <%= link_to "Back", listings_path %>
      </div>
    </div>
  </div>
</div>




